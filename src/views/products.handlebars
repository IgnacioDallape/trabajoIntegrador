<head>
    <title>{{title}}</title>
</head>
<div>
    <h4 class="d-flex  justify-content-center align-items-center pb-3">Productos</h4>
    <div class="d-flex  justify-content-end p-2">
        <button onclick="getCartFromServer()" class="btn btn-dark"> carrito </button>
    </div>
    <div class="d-flex  justify-content-center align-items-center pb-3 flex-column">
        <h1>Bienvenido, {{username}}</h1>
        <h3>Los productos son:</h3>
    </div>

    {{#each productos}}
    <div class="d-flex  justify-content-center align-items-center pb-3 flex-column ">
        <p>Producto: {{this.title}} </p>
        <p>Precio: {{this.price}}</p>


        <div><button class="btn btn-primary pt-2" onclick="agregarAlCarrito('{{this.title}}','{{this.price}}')">Agregar al
                Carrito</button></div>
        <div> <button class="btn btn-primary pt-2" onclick="obtenerCarritoDelServidor()">datos del Carrito</button>
        </div>
        <div> <button class="btn btn-primary pt-2" onclick="vaciarCarrito()">Vaciar Carrito</button>
        </div>
    </div>
    {{/each}}



    <div class="d-flex justify-content-center align-items-center ">
        {{#if pagination.hasPrevPage}}
        <a style='font-size: 20;' href='/products/?page={{pagination.prevPage}}'
            class="btn ">⬅{{pagination.prevPage}}</a>
        {{/if}}
        <a style='font-size: 20;' href='#' class="btn ">{{pagination.page}}</a>
        {{#if pagination.hasNextPage}}
        <a style='font-size: 20;' href='/products/?page={{pagination.nextPage}}'
            class="btn ">{{pagination.nextPage}}➡</a>
        {{/if}}

    </div>
    <div class="d-flex justify-content-center pt-2">

        {{#each links}}
        <a href='{{this.href}}' class="btn ">{{this.label}} </a>
        {{/each}}
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<link rel="stylesheet" href="/css/index.css">
<script src="/js/paginate.js"></script>